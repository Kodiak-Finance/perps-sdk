{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    // "verbatimModuleSyntax": true,    
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /** custom config */
    "verbatimModuleSyntax": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,

    /* Path mapping */
    "paths": {
      "@orderly.network/affiliate": [
        "../../packages/affiliate/src"
      ],
      "@orderly.network/chart": [
        "../../packages/chart/src"
      ],
      "@orderly.network/core": [
        "../../packages/core/src"
      ],
      "@orderly.network/default-evm-adapter": [
        "../../packages/default-evm-adapter/src"
      ],
      "@orderly.network/default-solana-adapter": [
        "../../packages/default-solana-adapter/src"
      ],
      "@orderly.network/hooks": [
        "../../packages/hooks/src"
      ],
      "@orderly.network/i18n": [
        "../../packages/i18n/src"
      ],
      "@orderly.network/markets": [
        "../../packages/markets/src"
      ],
      "@orderly.network/portfolio": [
        "../../packages/portfolio/src"
      ],
      "@orderly.network/react-app": [
        "../../packages/app/src"
      ],
      "@orderly.network/trading": [
        "../../packages/trading/src"
      ],
      "@orderly.network/trading-leaderboard": [
        "../../packages/trading-leaderboard/src"
      ],
      "@orderly.network/trading-rewards": [
        "../../packages/trading-rewards/src"
      ],
      "@orderly.network/types": [
        "../../packages/types/src"
      ],
      "@orderly.network/ui": [
        "../../packages/ui/src"
      ],
      "@orderly.network/ui-chain-selector": [

{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    // "verbatimModuleSyntax": true,    
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /** custom config */
    "verbatimModuleSyntax": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,

    /* Path mapping */
    "paths": {
      "@kodiak-finance/orderly-affiliate": ["../../packages/affiliate/src"],
      "@kodiak-finance/orderly-chart": ["../../packages/chart/src"],
      "@kodiak-finance/orderly-core": ["../../packages/core/src"],
      "@kodiak-finance/orderly-default-evm-adapter": [
        "../../packages/default-evm-adapter/src"
      ],
      "@kodiak-finance/orderly-default-solana-adapter": [
        "../../packages/default-solana-adapter/src"
      ],
      "@kodiak-finance/orderly-hooks": ["../../packages/hooks/src"],
      "@kodiak-finance/orderly-i18n": ["../../packages/i18n/src"],
      "@kodiak-finance/orderly-markets": ["../../packages/markets/src"],
      "@kodiak-finance/orderly-portfolio": ["../../packages/portfolio/src"],
      "@kodiak-finance/orderly-react-app": ["../../packages/app/src"],
      "@kodiak-finance/orderly-trading": ["../../packages/trading/src"],
      "@kodiak-finance/orderly-trading-leaderboard": [
        "../../packages/trading-leaderboard/src"
      ],
      "@kodiak-finance/orderly-trading-rewards": [
        "../../packages/trading-rewards/src"
      ],
      "@kodiak-finance/orderly-types": ["../../packages/types/src"],
      "@kodiak-finance/orderly-ui": ["../../packages/ui/src"],
      "@kodiak-finance/orderly-ui-chain-selector": [
        "../../packages/ui-chain-selector/src"
      ],
      "@kodiak-finance/orderly-ui-connector": [
        "../../packages/ui-connector/src"
      ],
      "@kodiak-finance/orderly-ui-leverage": ["../../packages/ui-leverage/src"],
      "@kodiak-finance/orderly-ui-order-entry": [
        "../../packages/ui-order-entry/src"
      ],
      "@kodiak-finance/orderly-ui-orders": ["../../packages/ui-orders/src"],
      "@kodiak-finance/orderly-ui-positions": [
        "../../packages/ui-positions/src"
      ],
      "@kodiak-finance/orderly-ui-scaffold": ["../../packages/ui-scaffold/src"],
      "@kodiak-finance/orderly-ui-share": ["../../packages/ui-share/src"],
      "@kodiak-finance/orderly-ui-tpsl": ["../../packages/ui-tpsl/src"],
      "@kodiak-finance/orderly-ui-tradingview": [
        "../../packages/ui-tradingview/src"
      ],
      "@kodiak-finance/orderly-ui-transfer": ["../../packages/ui-transfer/src"],
      "@kodiak-finance/orderly-vaults": ["../../packages/vaults/src"],
      "@kodiak-finance/orderly-utils": ["../../packages/utils/src"],
      "@kodiak-finance/orderly-vaults": ["../../packages/vaults/src"],
      "@kodiak-finance/orderly-wallet-connector": [
        "../../packages/wallet-connector/src"
      ],
      "@kodiak-finance/orderly-wallet-connector-privy": [
        "../../packages/wallet-connector-privy/src"
      ]
    }
  },
  "include": ["src", ".storybook/**/*"]
}

{
  "extends": "tsconfig/react-library.json",
  "include": ["src"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "**/*.spec.js",
    // "**/*.stories.tsx",
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "jsx": "react-jsx",
    "sourceMap": true,
    "module": "esnext",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  }
}
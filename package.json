{
  "private": true,
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=4096 turbo run build",
    "build-storybook": "cross-env NODE_OPTIONS=--max_old_space_size=4096 pnpm --filter @orderly.network/storybook build-storybook",
    "storybook": "pnpm --filter @orderly.network/storybook storybook",
    "dev": "turbo run dev --concurrency=20",
    "lint": "turbo run lint",
    "docs": "typedoc",
    "version:add": "pnpm build && changeset add",
    "version:g": "node ./scripts/version.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pnpm build",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@npmcli/package-json": "^5.0.0",
    "@turbo/gen": "^2.0.11",
    "eslint": "^8.57.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "prettier": "^2.5.1",
    "turbo": "^2.0.11",
    "typedoc": "^0.26.5",
    "typedoc-plugin-markdown": "^4.2.3"
  },
  "packageManager": "pnpm@9.0.6",
  "name": "orderly-web",
  "dependencies": {
    "@orderly.network/hooks": "workspace:^",
    "@orderly.network/react": "workspace:^",
    "@orderly.network/trading-view": "workspace:^",
    "@orderly.network/web3-onboard": "workspace:^",
    "@orderly.network/wallet-connector": "workspace:^"
  },
  "resolutions": {
    "@storybook/node-logger": "7.6.16"
  }
}
{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    // "incremental": true,
    "jsx": "react-jsx",
    "module": "esnext",
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "__test__", "__mocks__"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "skipErrorChecking": true
  }
}